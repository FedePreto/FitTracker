<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".diario.DiarioFragment">
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="385dp"
            android:layout_height="215dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp" android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" android:id="@+id/linearLayout12">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="110dp"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                    android:text=""
                    android:hint="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" android:id="@+id/calAssunte"/>
            <TextView
                    android:text="ASSUNTE"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="80dp"
                    android:layout_height="30dp" android:id="@+id/textView18"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp" tools:layout_editor_absoluteY="217dp"
                tools:layout_editor_absoluteX="78dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress_calorie"

                    android:layout_width="200dp"
                    android:layout_height="200dp"
            />
            <TextView
                    android:text="2500 kcal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp" android:id="@+id/calorie_rimanenti"
            />
        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="110dp"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                    android:text=""
                    android:hint="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" android:id="@+id/calBruciate"/>
            <TextView
                    android:text="BRUCIATE"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="80dp"
                    android:layout_height="30dp" android:id="@+id/textView22"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="370dp"
            android:layout_height="93dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:id="@+id/linearLayout13">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="125dp"
                android:gravity="center"
                android:layout_height="100dp">
            <TextView
                    android:text="CARBOIDRATI"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView15"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:progressTint="@color/deep_orange_primary"
                    android:progress="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/pgBar_carboidrati"/>
            <TextView
                    android:text="0/230g"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qnt_carbo"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="125dp"
                android:layout_height="100dp">
            <TextView
                    android:text="PROTEINE"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:progressTint="@color/yellow_primary"
                    android:progress="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/pgBar_proteine"/>
            <TextView
                    android:text="0/250g"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qnt_pro"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="125dp"
                android:layout_height="100dp">
            <TextView
                    android:text="GRASSI"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView26"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:progressTint="@color/google_blue"
                    android:progress="50"
                    android:layout_height="wrap_content"
                    android:id="@+id/pgBar_grassi"/>
            <TextView
                    android:text="0/250g"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qnt_grs"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="371dp"
            android:layout_height="70dp"
            tools:layout_editor_absoluteY="351dp"
            tools:layout_editor_absoluteX="16dp">


        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:gravity="left"
                android:layout_width="45dp"
                android:background="@drawable/filling_animation"
                android:layout_height="match_parent" android:id="@+id/glass_1" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_2" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_3" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_4" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_5" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_6" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_7" android:layout_weight="0"/>
        <ImageView
                android:src="@drawable/empty_glass_plus"
                android:layout_width="45dp"
                android:layout_height="match_parent" android:id="@+id/glass_8" android:layout_weight="0"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>