<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.InizioActivity"
        app:layoutDescription="@xml/activity_inizio_scene">
    <VideoView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/videoView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0" android:scaleX="1.4"
            android:scaleY="1.5" android:background="@color/black_overlay"/>
    <Button
            android:text="ACCEDI"
            android:layout_width="245dp"
            android:layout_height="65dp" android:id="@+id/btAccesso"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_bg" android:textSize="28sp"
            android:textStyle="bold" android:textAlignment="center" android:textAppearance="@style/EditTextyTextViews"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="50dp"/>
    <Button
            android:text="INIZIA"
            android:layout_width="245dp"
            android:layout_height="65dp" android:id="@+id/btInizia"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_bg_2" android:textStyle="bold"
            android:textColor="@color/white" android:textSize="45sp"
            android:textAppearance="@style/EditTextyTextViews"
            android:fontFamily="cursive"
            app:layout_constraintBottom_toTopOf="@+id/btAccesso"
            android:layout_marginBottom="50dp"/>
    <TextView
            android:layout_width="365dp"
            android:layout_height="114dp" android:id="@+id/textView9"
            android:text="@string/inizio" android:textStyle="bold|italic"
            android:textAlignment="center" android:textAppearance="@style/TextoOlvidasteyRegistro"
            android:textSize="28sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btInizia" android:layout_marginBottom="120dp"/>
    <ImageView
            android:src="@drawable/logo_white_large"
            android:layout_width="296dp"
            android:layout_height="101dp" android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintBottom_toTopOf="@+id/textView9" app:layout_constraintVertical_bias="0.07"/>
</androidx.constraintlayout.widget.ConstraintLayout>