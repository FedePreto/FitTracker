<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.ConosciamociActivity"
        android:background="@color/white">

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:id="@+id/linearLayout16">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView46" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView47" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView48" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView49" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView50" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView54" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView53" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView55" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Qual Ã¨ il tuo obiettivo di peso?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40sp" android:textStyle="bold|italic" android:textColor="@color/black"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
            android:layout_marginTop="10dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout6" android:background="@drawable/input_bg_green"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiPesoObb"
            android:layout_marginBottom="170dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11">
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_marginStart="10dp"
                android:id="@+id/eT_PesoObb" android:layout_weight="1" android:textSize="30sp"
                android:textAlignment="center" android:autofillHints=""/>
        <TextView
                android:text="Kg"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"
                android:textStyle="bold" android:textAlignment="center" android:textSize="30sp"
                android:textColor="@color/black"/>
    </LinearLayout>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiPesoObb"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:background="@drawable/animazione_1" android:textStyle="bold"
            android:textAlignment="center" android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>