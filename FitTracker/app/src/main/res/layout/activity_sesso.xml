<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.DatiPersonaliActivity"
        android:background="@color/green_bg">

    <TextView
            android:text="@string/sesso"
            android:layout_width="340dp"
            android:layout_height="154dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.573" app:layout_constraintVertical_bias="0.139"
            android:textSize="55sp" android:textStyle="bold|italic" android:textAlignment="center"
            android:textColor="#FFFFFF" android:textAllCaps="false"/>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/btnConferma"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textStyle="bold" android:background="@drawable/btn_bg"
            android:textSize="25sp" android:layout_marginBottom="64dp"/>
    <RadioGroup
            android:layout_width="289dp"
            android:layout_height="227dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toTopOf="@+id/btnConferma"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.377">
        <RadioButton
                android:text="Uomo"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content" android:id="@+id/rB_uomo" android:background="@drawable/btn_bg"
                android:textSize="50sp" android:textAlignment="center" android:textStyle="bold"/>
        <RadioButton
                android:text="Donna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rB_donna" android:background="@drawable/btn_bg"
                android:textSize="50sp" android:textStyle="bold" android:textAlignment="center"/>
    </RadioGroup>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="35dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/btn_bg">
        <ImageView
                android:src="@drawable/rounded_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView6" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView8" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView9" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView17" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView18" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView19" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView20" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/rounded_rectangle_vuoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView21" android:layout_weight="1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>