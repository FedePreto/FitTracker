<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.PesoAttualeActivity" android:background="@color/white">

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="365dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_bg" app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView38" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView39" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView40" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView41" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView42" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView43" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView44" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView45" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Qual Ã¨ il tuo peso attuale?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@color/black"
            android:textStyle="bold|italic" android:textAlignment="center" android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5" android:layout_marginBottom="56dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="383dp"
            android:layout_height="87dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/input_bg_green"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiPesoAttuale"
            android:layout_marginBottom="176dp">
        <EditText
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_marginLeft="30dp"
                android:id="@+id/eT_PesoAttuale" android:layout_weight="1" android:textSize="50sp"
                android:textAlignment="center" android:hint="30-200"/>
        <TextView
                android:text="Kg"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                android:textSize="50sp" android:textAlignment="center" android:textStyle="bold"
                android:textColor="@color/black"/>
    </LinearLayout>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiPesoAttuale"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp" android:textSize="25sp" android:textStyle="bold"
            android:textAlignment="center" android:background="@drawable/animazione_1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>