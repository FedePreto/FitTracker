<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.example.fittracker.statistiche.StatisticheViewModel"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".statistiche.StatisticheFragment">
    <LinearLayout
            android:background="@drawable/bg_card"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="168dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout8" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="294dp"
                android:gravity="center"
                android:layout_height="match_parent"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/input_bg_green"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <TextView
                        android:text="Inizio:"
                        android:textColor="@color/black"
                        android:padding="6dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" android:id="@+id/coek"
                />
                <TextView
                        android:hint="Data Inizio"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tV_dataiInizio"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/input_bg_green"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <TextView
                        android:text="Fine:"
                        android:padding="6dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" android:id="@+id/te16"
                />
                <TextView
                        android:hint="Data Fine"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tV_dataFine"
                />
            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                <Button
                        android:text="Filtra"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:background="@drawable/animazione_5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_filtra"
                />
                <Button
                        android:text="Reset"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:background="@drawable/animazione_5"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_reset"
                />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="20dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center">
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="KCal consumate"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/tdfiew31"/>
                <TextView
                        android:text="@{Integer.valueOf(viewModel.kcalAssunte).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/kcal_consumate"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="Litri d'acqua"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/twff31"/>
                <TextView
                        android:text="@{Double.valueOf(viewModel.litriBevuti).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/litri_consumati"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="Gr. Carboidrati"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/textVff31"/>
                <TextView
                        android:text="@{Integer.valueOf(viewModel.grCarboidrati).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/gr_carbo"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="Gr. Proteine"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/tevfd31"/>
                <TextView
                        android:text="@{Integer.valueOf(viewModel.grProteine).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/gr_prot"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="Gr. Grassi"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/tvffdw31"/>
                <TextView
                        android:text="@{Integer.valueOf(viewModel.grGrassi).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/gr_grassi"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <TextView
                        android:text="Giorni 2L d'acqua completati"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/tvfvew31"/>
                <TextView
                        android:text="@{Integer.valueOf(viewModel.giorniAcqua).toString()}"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent" android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/giorni_2_litri"/>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>