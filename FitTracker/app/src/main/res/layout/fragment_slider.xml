<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.ConosciamociActivity"
        android:background="@color/white">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:layout_marginTop="10dp"
            android:id="@+id/linearLayout17">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView51" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView58" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView57" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView52" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView56" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView59" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView60" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView61" android:layout_weight="1"/>
    </LinearLayout>
    <SeekBar
            style="@android:style/Widget.Material.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:max="4"
            android:progress="2"
            android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492" android:progressBackgroundTint="@color/black"
            android:background="@drawable/input_bg_green" android:thumb="@android:drawable/presence_online"
            android:progressTint="@color/green_bg"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            android:layout_marginTop="50dp" android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
            android:layout_marginTop="10dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
        <TextView
                android:layout_marginRight="15dp"
                android:text="Da"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:id="@+id/textView14"
                android:textSize="50sp" android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content" android:id="@+id/tV_DaPeso"
                android:textSize="35sp" android:textAlignment="center"
                android:background="@drawable/input_bg_green" android:hint="DaPeso" android:editable="false"/>
        <TextView
                android:text="Kg"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                android:textStyle="bold" android:textColor="@color/black" android:textAlignment="viewStart"
                android:textSize="35sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            android:layout_marginTop="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
        <TextView
                android:layout_marginRight="15dp"
                android:text="A"
                android:layout_width="70dp"
                android:layout_height="wrap_content" android:id="@+id/textView17"
                android:textAlignment="center" android:textStyle="bold|italic"
                android:textColor="@color/black" android:textSize="50sp"
        />
        <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content" android:id="@+id/tV_APeso" android:layout_weight="1"
                android:textAlignment="center" android:textSize="35sp" android:background="@drawable/input_bg_green"
                android:hint="APeso"/>
        <TextView
                android:text="Kg"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="1"
                android:textSize="35sp" android:textAlignment="center" android:textStyle="bold"
                android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/kg_per_settimana"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="21sp"
            android:textColor="@color/black" android:text="0.5 Kg/Settimana"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/seekBar"
            android:layout_marginEnd="30dp"/>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:textSize="25sp" android:textStyle="bold"
            android:textAlignment="center" android:background="@drawable/animazione_1"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintVertical_bias="1.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout8"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
            android:layout_marginTop="50dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
        <TextView
                android:text="Otterrai tale risultato il:"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="201dp"
                android:layout_height="match_parent" android:id="@+id/textView21" android:layout_weight="1"
                android:textStyle="bold" android:textSize="25sp" android:textAlignment="center"
                android:textColor="@color/black"/>
        <TextView
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/tvDateRaggiungimento" android:layout_weight="1" android:textSize="25sp"
                android:textAlignment="center" android:hint="Data"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>