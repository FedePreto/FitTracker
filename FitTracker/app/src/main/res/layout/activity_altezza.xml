<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.AltezzaActivity" android:background="@color/green_bg">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_bg" app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView30" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView31" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView32" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView33" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView34" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView35" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView36" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView37" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Qual Ã¨ la tua altezza?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="50sp" android:textAlignment="center"
            android:textStyle="bold|italic" android:textColor="@color/white" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4" android:layout_marginBottom="48dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="78dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/btn_bg"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiAltezza" android:layout_marginBottom="150dp"
            android:id="@+id/linearLayout4">
        <EditText
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:inputType="numberSigned"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:id="@+id/eT_altezza" android:layout_weight="1" android:textSize="45sp"
                android:textAlignment="center" android:hint="130-300" android:textColor="@color/black"/>
        <TextView
                android:text="cm"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:textAlignment="center" android:textStyle="bold" android:textSize="50sp"
                android:textColor="@color/black"/>
    </LinearLayout>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiAltezza"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="92dp" android:textSize="25sp" android:textAlignment="center"
            android:textStyle="bold" android:background="@drawable/btn_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>