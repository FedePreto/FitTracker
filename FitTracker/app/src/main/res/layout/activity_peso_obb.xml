<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.PesoObbActivity" android:background="@color/green_bg">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="35dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_bg" app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView46" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView47" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView48" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView49" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView50" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView54" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView53" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView55" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Qual Ã¨ il tuo obiettivo di peso?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="50sp" android:textStyle="bold|italic" android:textColor="#FFFFFF"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout6" android:layout_marginBottom="52dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="403dp"
            android:layout_height="98dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout6" android:background="@drawable/btn_bg"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiPesoObb"
            android:layout_marginBottom="188dp">
        <EditText
                android:layout_width="252dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_marginLeft="30dp"
                android:id="@+id/eT_PesoObb" android:layout_weight="1" android:textSize="50sp"
                android:textAlignment="center"/>
        <TextView
                android:text="Kg"
                android:layout_marginRight="10dp"
                android:layout_width="62dp"
                android:layout_height="77dp" android:id="@+id/textView12" android:layout_weight="1"
                android:textStyle="bold" android:textAlignment="center" android:textSize="50sp"
                android:textColor="@color/black"/>
    </LinearLayout>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiPesoObb"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp" android:background="@drawable/btn_bg" android:textStyle="bold"
            android:textAlignment="center" android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>