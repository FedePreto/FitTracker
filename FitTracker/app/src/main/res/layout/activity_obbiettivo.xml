<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_bg"
        tools:context=".autenticazione.ObbiettivoActivity"
>
    <TextView
            android:text="Quale obbiettivo vuoi raggiungere?"
            android:layout_width="330dp"
            android:layout_height="80dp" android:id="@+id/textView4"
            android:textSize="30sp" android:textAlignment="center"
            android:textStyle="bold|italic" android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/GruppoRadio"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="8dp"/>

    <RadioGroup
            android:layout_width="328dp"
            android:layout_height="281dp"
            android:id="@+id/GruppoRadio" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/bt_AvantiObb"
            app:layout_constraintHorizontal_bias="0.489"
            android:background="@color/transparent">
        <RadioButton
                android:text="Diminuisci peso-forma"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/rB_Diminuisci" android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center" android:background="@drawable/btn_bg"/>
        <RadioButton
                android:text="Mantieni peso-forma"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="70dp" android:id="@+id/rB_Mantieni" android:textSize="25sp"
                android:textStyle="bold" android:textAlignment="center" android:background="@drawable/btn_bg"/>
        <RadioButton
                android:text="Aumenta peso-forma"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/rB_Aumenta" android:textAlignment="center"
                android:textSize="25sp" android:textStyle="bold"
                android:background="@drawable/btn_bg"/>
    </RadioGroup>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiObb"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="56dp" android:textStyle="bold" android:background="@drawable/btn_bg"
            android:textSize="25sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="316dp"
            android:layout_height="86dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77" android:id="@+id/linearLayout2">
        <ImageView
                android:layout_width="94dp"
                android:layout_height="84dp" app:srcCompat="@drawable/logo_small_icon_only_inverted"
                android:id="@+id/imageView4"/>
        <TextView
                android:text="Conosciamoci meglio!"
                android:layout_width="219dp"
                android:layout_height="match_parent" android:id="@+id/textView13" android:layout_weight="1"
                android:textStyle="bold" android:textAlignment="center" android:textSize="32sp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" android:background="@drawable/btn_bg">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle"
                android:id="@+id/imageView10" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView7" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView11" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView12" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView13" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView14" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView15" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_rectangle_vuoto"
                android:id="@+id/imageView16" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>