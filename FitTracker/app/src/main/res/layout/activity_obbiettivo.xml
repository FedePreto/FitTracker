<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_bg"
        tools:context=".ObbiettivoActivity"
>

    <TextView
            android:text="Seleziona il tuo obbiettivo da raggiungere"
            android:layout_width="325dp"
            android:layout_height="126dp" android:id="@+id/textView4"
            android:textSize="30sp" android:textAlignment="center"
            android:textStyle="bold" android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476" app:layout_constraintBottom_toTopOf="@+id/GruppoRadio"/>
    <RadioGroup
            android:layout_width="348dp"
            android:layout_height="287dp"
            android:id="@+id/GruppoRadio" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnObbiettivo"
            android:layout_marginBottom="50dp">
        <RadioButton
                android:text="Diminuisci peso-forma"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/rB_Diminuisci" android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        <RadioButton
                android:text="Mantieni peso-forma"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/rB_Mantieni" android:textSize="25sp"
                android:textStyle="bold"/>
        <RadioButton
                android:text="Aumenta peso-forma"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/rB_Aumenta" android:textAlignment="viewStart"
                android:textSize="25sp" android:textStyle="bold"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Obbiettivo peso:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
            <EditText
                    android:layout_width="112dp"
                    android:layout_height="70dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/kg_obb"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" android:textStyle="bold"/>
            <TextView
                    android:text="Kg"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:id="@+id/textView14" android:layout_weight="1"/>

        </LinearLayout>
    </RadioGroup>
    <Button
            android:text="Conferma"
            android:layout_width="226dp"
            android:layout_height="64dp" android:id="@+id/btnObbiettivo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="84dp" android:textStyle="bold" android:background="@drawable/btn_bg"
            android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>