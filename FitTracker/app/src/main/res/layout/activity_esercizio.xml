<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            tools:context=".esercizio.EsercizioRDUActivity">

        <TextView
                android:text="Esercizio"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tV_esercizio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_esercizio"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="50dp">
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="KCal/h:"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" android:id="@+id/textView17"
                />
                <TextView
                        android:text="0"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tV_kcal_h"
                />
            </LinearLayout>
            <LinearLayout

                    android:padding="5dp"
                    android:id="@+id/layoutQuantita"
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Durata: "
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" android:id="@+id/terreiew17"
                />
                <EditText
                        android:text="0"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/eT_durata"
                />
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout10">

                <Button
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/animazione_4"
                        android:layout_marginRight="5dp"
                        android:text="Elimina"
                        android:textSize="18sp"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/btn_elimina"
                />

                <Button
                        android:text="Modifica"
                        android:background="@drawable/animazione_4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/btn_modifica"
                />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>