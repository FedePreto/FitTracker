<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.LoginActivity"
        android:background="@drawable/bg_dark_green">

    <ImageView
            android:layout_width="334dp"
            android:layout_height="71dp" app:srcCompat="@drawable/logo_large" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/TitleLog"
            app:layout_constraintVertical_bias="0.253" app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:text="@string/login_page"
            android:layout_width="161dp"
            android:layout_height="57dp" android:id="@+id/TitleLog"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="45sp" android:textStyle="bold" android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/InputEmailLogin" android:layout_marginBottom="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/InputEmailLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:hint="@string/email"
            android:textColorHint="@color/white" android:textColor="@color/white"
            android:background="@drawable/input_bg" android:paddingLeft="20dp" android:paddingTop="10dp"
            android:paddingRight="20dp" android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_email" android:drawablePadding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/InputPasswordLogin" android:layout_marginBottom="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0" android:textSize="25sp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/InputPasswordLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:hint="@string/password"
            android:textColorHint="@color/white" android:textColor="@color/white"
            android:background="@drawable/input_bg" android:paddingLeft="20dp" android:paddingTop="10dp"
            android:paddingRight="20dp" android:paddingBottom="10dp"
            android:drawableLeft="@mipmap/baseline_password_white_24" android:drawablePadding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin" android:layout_marginBottom="140dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0" android:textSize="25sp"/>
    <Button
            android:text="@string/login"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/btnLogin"
            android:textSize="25sp"
            android:background="@drawable/btn_bg" android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.949"/>
    <TextView
            android:text="@string/forgotPass"
            android:layout_width="201dp"
            android:layout_height="25dp" android:id="@+id/forgotPass"
            app:layout_constraintBottom_toBottomOf="@+id/InputPasswordLogin"
            app:layout_constraintEnd_toEndOf="@+id/InputPasswordLogin"
            android:layout_marginBottom="-30dp" android:textStyle="bold" android:textSize="18sp"
            android:clickable="true" android:textAlignment="textEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>