<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:context=".RecuperoPasswordActivity"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

    <ImageView
            android:layout_width="310dp"
            android:layout_height="100dp" app:srcCompat="@drawable/logo_large" android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.028"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="@string/invia"
            android:layout_width="171dp"
            android:layout_height="55dp" android:id="@+id/btnInvia"
            android:background="@drawable/btn_bg" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.512"/>
    <Button
            android:text="@string/indietro"
            android:layout_width="171dp"
            android:layout_height="55dp" android:id="@+id/btnIndietro"
            android:background="@drawable/btn_bg" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.508"
            android:textSize="20sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInvia" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="294dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/InputRecupero"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:hint="@string/email"
            android:textColorHint="@color/white" android:textColor="@color/white"
            android:background="@drawable/input_bg" android:paddingLeft="20dp" android:paddingTop="10dp"
            android:paddingRight="20dp" android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_email" android:drawablePadding="10dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/btnInvia"
            android:layout_marginTop="94dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>